@model List<User>
@inject LanguageService ls
@{
    ViewData["Title"] = @ls.get(LanguageService.Words.Users);
}
<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th scope="col">Id</th>
            <th scope="col">@ls.get(LanguageService.Words.UserName)</th>
            <th scope="col">@ls.get(LanguageService.Words.Password)</th>
            <th scope="col">@ls.get(LanguageService.Words.Email)</th>
            <th scope="col">@ls.get(LanguageService.Words.UserRole)</th>
            <th scope="col">@ls.get(LanguageService.Words.Admin)</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-light">
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>
                    @item.Password
                </td>
                <td>@item.Email</td>
                <td>@item.UserRoleId</td>
                <td>
                    @if (item.IsAdmin)
                    {
                        <input type="checkbox" class="form-check-input" disabled checked>
                    }
                    else
                    {
                        <input type="checkbox" class="form-check-input" disabled>
                    }
                </td>
                @if (!item.IsAdmin)
                {
                    <td align="right" width="30%">
                        <a asp-controller="ManageUsers" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">@ls.get(LanguageService.Words.Edit)</a>
                    <a data-bs-target="#deleteModal" data-bs-toggle="modal" class="btn btn-danger deleteItem"
                       data-path="@Url.Action("Delete", "ManageUsers", new { id = @item.Id })">@ls.get(LanguageService.Words.Delete)</a>

                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="ManageUsers" asp-action="Add">@ls.get(LanguageService.Words.Add_New_User)</a>

<div class="modal fade" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ls.get(LanguageService.Words.Delete) @ls.get(LanguageService.Words.UserRole)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">

                <p>@ls.get(LanguageService.Words.Are_You_Sure_Delete) @ls.get(LanguageService.Words.User) ?</p>
            </div>
            <div class="modal-footer">
                <button id="btnContinueDelete" type="button" class="btn btn-danger">@ls.get(LanguageService.Words.Delete)</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@ls.get(LanguageService.Words.Cancel)</button>
            </div>
        </div>
    </div>
</div>

