<h3>Login</h3>


<RadzenCard class="my-5 mx-auto" Style="max-width: 400px;">
<RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Account Login Number:</RadzenText>
<RadzenTextBox @bind-Value=@AccLoginId Style="width: 100%;" />
<RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3" class="mt-4">UserName</RadzenText>
<RadzenTextBox @bind-Value=@UserName Style="width: 100%;" />
<RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3" class="mt-4">Password</RadzenText>
<RadzenTextBox @bind-Value=@Password Style="width: 100%;" />
<div class="row">
    <div class="col-md-12 d-flex align-items-end justify-content-left mt-4">
        <RadzenButton ButtonType="ButtonType.Submit" Text="Login" />
    </div>
</div>
</RadzenCard>

@code{
    public string AccLoginId { get; set; }
    public string UserName { get; set; }
    public string Password{ get; set; }
}