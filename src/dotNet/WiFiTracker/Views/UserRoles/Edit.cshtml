@model UserRoles
@inject LanguageService ls

<form class="mt-2" method="post">
    <fieldset>
        <legend>@ls.get(LanguageService.Words.Add_New_UserRole)</legend>

        <div class="form-group">
            <label class="form-label mt-4" for="inputValid">@ls.get(LanguageService.Words.Name):</label>
            <input type="text" placeholder="@ls.get(LanguageService.Words.Name)" class="form-control" id="inputValid" asp-for="Name">
        </div>

        <div class="form-group">
            <label class="form-label mt-4" for="inputValid">@ls.get(LanguageService.Words.Allow_Terminals):</label>
            <input type="checkbox" class="form-check-input align-middle" asp-for="AllowTerminals">
        </div>

        <div class="form-group">
            <label class="form-label mt-4" for="inputValid">@ls.get(LanguageService.Words.Allow_Transmitters):</label>
            <input type="checkbox" class="form-check-input align-middle" asp-for="AllowTransmitters">
        </div>

        <div class="form-group">
            <label class="form-label mt-4" for="inputValid">@ls.get(LanguageService.Words.Allow_Report_LiveView):</label>
            <input type="checkbox" class="form-check-input align-middle" asp-for="AllowReportLiveView">
        </div>

        <div class="form-group">
            <label class="form-label mt-4" for="inputValid">@ls.get(LanguageService.Words.Allow_Report_TrackHistory):</label>
            <input type="checkbox" class="form-check-input align-middle" asp-for="AllowReportTrackHistory">
        </div>

        <div class="form-group">
            <label class="form-label mt-4" for="inputValid">@ls.get(LanguageService.Words.Allow_DownloadApp):</label>
            <input type="checkbox" class="form-check-input align-middle" asp-for="AllowDownloadApp">
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary mr-3">@ls.get(LanguageService.Words.Update)</button>
            &nbsp;&nbsp;&nbsp;
            <a class="btn btn-warning " asp-controller="UserRoles" asp-action="Index">@ls.get(LanguageService.Words.Cancel)</a>
        </div>


    </fieldset>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}