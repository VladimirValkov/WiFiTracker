@model Terminal
@inject LanguageService ls

<form class="mt-2" method="post">
    <fieldset>
        <legend>@ls.get(LanguageService.Words.Edit_Terminal)</legend>

        <div class="form-group">
            <label class="form-label mt-4" for="inputValid">@ls.get(LanguageService.Words.Name):</label>
            <input type="text" placeholder="@ls.get(LanguageService.Words.Name)" class="form-control" id="inputValid" asp-for="Name">
        </div>
        <div class="form-group">
            <fieldset>
                <label class="form-label mt-4" for="readOnlyInput">@ls.get(LanguageService.Words.Terminal) Id</label>
                <div class="container">
                    <div class="row">
                        <div class="col-sm">
                            <input asp-for="TerminalId" class="form-control" id="generateInput" type="text" placeholder="Auto generated..." readonly="">
                        </div>
                        <div class="col-1">
                            <button type="button" class="btn btn-light" onclick="generateId('generateInput')">@ls.get(LanguageService.Words.Generate)</button>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary mr-3">@ls.get(LanguageService.Words.Update)</button>
            &nbsp;&nbsp;&nbsp;
            <a class="btn btn-warning " asp-controller="Terminals" asp-action="Index">@ls.get(LanguageService.Words.Cancel)</a>
        </div>


    </fieldset>
</form>

@section Scripts{
    @{ 
        <partial name="_ValidationScriptsPartial" />
    }
 }
