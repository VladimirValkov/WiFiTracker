@model Terminal

<form class="mt-2" method="post">
    <fieldset>
        <legend>Add Terminal</legend>

        <div class="form-group">
            <label class="form-label mt-4" for="inputValid">Name:</label>
            <input type="text" placeholder="Name" class="form-control" id="inputValid" asp-for="Name">
            @*<span asp-validation-for="Name" class="">Please fill a name.</span>*@
            @*<div class="valid-feedback">Success! You've done it.</div>*@
        </div>
        <div class="form-group">
            <fieldset>
                <label class="form-label mt-4" for="readOnlyInput">Terminal Id</label>
                <div class="container">
                    <div class="row">
                        <div class="col-sm">
                            <input asp-for="TerminalId" class="form-control" id="generateInput" type="text" placeholder="Auto generated..." readonly="">
                        </div>
                        <div class="col-1">
                            <button type="button" class="btn btn-light" onclick="generateId('generateInput')">Generate</button>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary mr-3">Update</button>
            &nbsp;&nbsp;&nbsp;
            <a class="btn btn-warning " asp-controller="Terminals" asp-action="Index">Cancel</a>
        </div>


    </fieldset>
</form>

@section Scripts{
    @{ 
        <partial name="_ValidationScriptsPartial" />
    }
 }
